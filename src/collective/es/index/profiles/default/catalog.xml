<?xml version="1.0"?>
<object name="portal_catalog" meta_type="Plone Catalog Tool">
  <index name="espi" meta_type="ElasticSearchProxyIndex">
    <querytemplate>
{
    "query":{
        "multi_match":{
            "query":"{{keys[0].replace('"', '')}}",
            "fields":[
                "title^1.2",
                "description^1.1",
                "extracted_text.content",
                "extractced_file.content",
                "extracted_image.content"
            ]
        }
    }
}
    </querytemplate>
  </index>
</object>